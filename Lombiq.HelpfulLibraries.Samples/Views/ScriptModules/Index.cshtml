@using OrchardCore.ResourceManagement

@inject IResourceManager ResourceManager
@{
    ResourceManager.RegisterScriptModule("child");
}

<pre id="script-modules-output" class="border-danger"></pre>

<script type="module" at="Foot">
    import parent from 'parent';

    document.getElementById('script-modules-output').textContent += `imported module ${JSON.stringify(parent)}\n`;
    document.getElementById('script-modules-output').textContent += `parent module is exported? ${window.parent === parent}`;
</script>